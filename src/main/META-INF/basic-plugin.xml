<idea-plugin url="http://github.com/vsch/idea-multimarkdown" xmlns:xi="http://www.w3.org/2001/XInclude">
    <id>com.vladsch.idea.multimarkdown</id>
    <name>Markdown Navigator Basic</name>
    <category>Custom Languages</category>
    <vendor email="vladimir.schneider@gmail.com" url="http://github.com/vsch">Vladimir Schneider</vendor>
    <depends>com.intellij.modules.lang</depends>
    <depends>Git4Idea</depends>
    <depends optional="true" config-file="plugin-intellilang.xml">org.intellij.intelliLang</depends>
    <depends optional="true" config-file="plugin-java.xml">com.intellij.java</depends>
    <depends optional="true" config-file="plugin-grazie.xml">tanvd.grazi</depends>
    <depends optional="true" config-file="plugin-images.xml">com.intellij.platform.images</depends>
    <depends optional="true" config-file="plugin-javafx.xml">com.intellij.javafx</depends>
    <depends optional="true" config-file="plugin-markdown.xml">org.intellij.plugins.markdown</depends>
    
    <resource-bundle>com.vladsch.md.nav.localization.strings</resource-bundle>

    <xi:include href="version.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <xi:include href="description.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <xi:include href="change-notes.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <xi:include href="basic-extension-points.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <xi:include href="basic-extensions.xml" xpointer="xpointer(/idea-plugin/*)"/>
    <xi:include href="flex-extensions.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <xi:include href="basic-actions.xml" xpointer="xpointer(/idea-plugin/*)"/>
    <xi:include href="flex-actions.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <xi:include href="basic-action-groups.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <xi:include href="basic-intention-actions.xml" xpointer="xpointer(/idea-plugin/*)"/>
    <xi:include href="flex-intention-actions.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <xi:include href="basic-configurables.xml" xpointer="xpointer(/idea-plugin/*)"/>
    <xi:include href="flex-configurables.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <xi:include href="basic-inspections.xml" xpointer="xpointer(/idea-plugin/*)"/>
    <xi:include href="flex-inspections.xml" xpointer="xpointer(/idea-plugin/*)"/>
</idea-plugin>
